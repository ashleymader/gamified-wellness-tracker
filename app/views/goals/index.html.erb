<h2>Choose Your Daily Goals</h2>

<div>
    <%= form_for @usergoal do |f| %>
        <%= @goals.each do |goal| %>
            <p><%= @goal.category %></p>
            <p><%= @goal.description %></p>
            <%= f.hidden_field :goal_id %><br />
            <%= f.hidden_field :user_id %><br />
            <%= f.submit "Add this to my User Goal" %>
        <% end %>
    <% end %>
</div>
