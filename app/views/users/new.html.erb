<%= flash[:message] if flash[:message] %>

<h1>Sign Up</h1>

<%= form_for @user do |f| %>
    <%= f.label :first_name, 'First Name:' %>
    <%= f.text_field :first_name %><br><br>

    <%= f.label :last_name, 'Last Name:' %>
    <%= f.text_field :last_name %><br><br>

    <%= f.label :username, 'Username:' %>
    <%= f.text_field :username %><br><br>

    <%= f.label :email, 'Email:' %>
    <%= f.text_field :email %><br><br>

    <%= f.label :password, 'Password:' %>
    <%= f.password_field :password %><br><br>

    <% if params[:team_id] && @team = Team.find_by_id(params[:team_id]) %>
        <%= @team.team_name %>
    <% else %>
        <%= f.label :team, 'Team:' %>
        <%= f.select :team_id, options_from_collection_for_select(Team.all, :id, :team_name) %>
    <% end %><br><br>

    <%= f.submit 'Sign Up' %>

<% end %>